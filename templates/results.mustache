<div class="learning-results-block" style="padding: 15px; background: white; border-radius: 8px; border: 1px solid #dee2e6;">
    <div class="learning-header text-center mb-3">
        <div style="position: relative; display: inline-block; line-height: 0;">
            {{{icon}}}
            <i class="fa fa-check text-primary" style="position: absolute; top: -6px; right: -9px; font-size: 1.4em; background: white; border-radius: 50%; line-height: 1; text-shadow: 0 1px 2px rgba(0,0,0,0.1);"></i>
        </div>
        <h6 class="mt-2 mb-1 font-weight-bold">{{#str}} test_completed, block_learning_style {{/str}}</h6>
        <small class="text-muted">{{#str}} your_results_here, block_learning_style {{/str}}</small>
    </div>

    {{#showdescriptions}}
    <div class="learning-description mb-3" style="background: #f8f9fa; padding: 10px 12px; border-radius: 5px; border-left: 3px solid #0d6efd;">
        <small class="text-muted" style="line-height: 1.5;">
            <i class="fa fa-info-circle" style="color: #0d6efd;"></i>
            {{#str}} test_description, block_learning_style {{/str}}
        </small>
    </div>
    {{/showdescriptions}}

    <div class="row g-2 mb-3">
        {{#results_cards}}
        <div class="col-6 mb-2">
            <div class="card h-100 text-center p-2 border-0 shadow-sm" style="background-color: #f8f9fa;">
                <div class="card-body p-1">
                    <small class="text-muted d-block mb-1" style="font-size: 0.8rem;">{{dimension}}</small>
                    <i class="fa {{icon}} fa-2x mb-1" style="background: linear-gradient(135deg, #1567f9 0%, #0054ce 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; display: inline-block;"></i>
                    <h6 class="card-title mb-0" style="font-size: 0.9rem;">{{style}}</h6>
                </div>
            </div>
        </div>
        {{/results_cards}}
    </div>

    <div class="text-center">
        <a href="{{summary_url}}" class="btn btn-sm" style="background: linear-gradient(135deg, #1567f9 0%, #0054ce 100%); border: none; color: #fff; width: 100%; font-weight: 500;">
            <i class="fa fa-chart-bar"></i> {{#str}} see_full_results, block_learning_style {{/str}}
        </a>
    </div>
</div>
